<% content_for(:title, t('.title')) %>
<% breadcrumb :profile_password_reset%>

<div class = 'profile_page_margin'>
  <div class = 'card card_margin bg-light mx-auto' style = 'width: 70%;'>
    <div class = 'card-body'>
      <h1 class = 'card-title display-5 text-center title_margin'><%= t '.title' %></h1>
      <p class = 'card-text lead'><%= t('.explanatory') %></p>
      <ul class = 'list-group'>
        <li class = 'list-group-item d-flex justify-content-between align-items-center'>
          <label class = 'badge badge-primary'><%= User.human_attribute_name(:email) %></label>
          <p class = 'p_margin_auto text-right'><%= @user.email %></p>
        </li>
      </ul><br>
      <%= link_to t('defaults.send'), profile_path, method: :post, class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  </div>
</div>