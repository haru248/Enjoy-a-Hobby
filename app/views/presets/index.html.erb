<% content_for(:title, t('.title')) %>
<% breadcrumb :preset_index %>

<h1 class = 'display-5 text-center title_margin'><%= t '.title' %></h1>
<%= render 'search', q: @q, url: presets_path %>

<div class = 'py-4'>
  <div class = 'container'>
    <%= link_to t('presets.new.title'), new_preset_path, class: 'btn btn-sm btn-primary' %>
    <% if @presets.present? %>
      <ul class = 'list-group'>
        <% @presets.each do |preset| %>
          <li class = 'list-group-item bg-light'>
            <div class = "preset<%= preset.id %> d-flex justify-content-between align-items-center">
              <p class = 'p_margin_auto'><%= preset.preset_name %></p>
              <div class = 'btn-group'>
                <%= link_to t('defaults.show'), preset_path(preset), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to t('defaults.destroy'), preset_path(preset), method: :delete, data: {confirm: t('defaults.destroy_confirm', name: preset.preset_name)}, class: 'btn btn-sm btn-outline-secondary' %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @presets %>
    <% else %>
      <div class = 'text-center item_less_margin'>
        <h3><%= t '.preset_less' %></h3>
        <p class = 'lead'><%= t '.preset_less2' %></p>
      </div>
    <% end %>
  <div>
</div>
