<div class = 'container schedule_form'>
  <%= form_with model: schedule, local: true, class: 'list_width form' do |f| %>
    <h1 class = 'h3 mb-3 font-weight-normal text-center'><%= title %></h1>
    <h1 class = 'h6 mb-3 font-weight-normal text-center'><%= t '.explanation' %></h1>
    <%= render 'shared/error_messages', model: schedule %>

    <%= f.label :schedule_name, class: 'badge badge-primary' %>
    <%= f.text_field :schedule_name, class: 'form-control' %><br>

    <%= f.label :start_date, class: 'badge badge-primary' %>
    <%= f.date_field :start_date, class: 'form-control' %><br>

    <%= f.label :end_date, class: 'badge badge-primary' %>
    <%= f.date_field :end_date, class: 'form-control' %><br>

    <%= f.label Schedule.human_attribute_name(:inventory_list_id), class: 'badge badge-primary' %><br>
    <%= f.collection_select :inventory_list_id, current_user.inventory_lists.all, :id, :inventory_list_name, include_blank: true, class: 'form-control' %><br>

    <%= f.label :venue, class: 'badge badge-primary' %>
    <%= f.text_field :venue, class: 'form-control' %><br>

    <%= f.label :lodging, class: 'badge badge-primary' %>
    <%= f.text_field :lodging, class: 'form-control' %><br>

    <%= f.label Schedule.human_attribute_name(:purchase_list_id), class: 'badge badge-primary' %><br>
    <%= f.collection_select :purchase_list_id, current_user.purchase_lists.all, :id, :purchase_list_name, include_blank: true, class: 'form-control' %><br>

    <%= f.label :memo, class: 'badge badge-primary' %>
    <%= f.text_area :memo, class: 'form-control' %><br>

    <%= f.submit class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
</div>