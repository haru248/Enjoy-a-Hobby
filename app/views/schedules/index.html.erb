<% content_for(:title, t('.title')) %>
<% breadcrumb :schedule_index %>

<h1 class = 'display-5 text-center title_margin'><%= t '.title' %></h1>
<%= render 'search', q: @q, url: schedules_path %>

<div class = 'py-4'>
  <div class = 'container'>
    <%= link_to t('schedules.new.title'), new_schedule_path, class: 'btn btn-sm btn-primary' %>
    <% if @schedules.present? %>
      <ul class = 'list-group'>
        <% @schedules.each do |schedule| %>
          <li class = 'list-group-item bg-light'>
            <div class = "schedule<%= schedule.id %> d-flex justify-content-between align-items-center">
              <p class = 'p_margin_auto'><%= schedule.schedule_name %></p>
              <div class = 'btn-group'>
                <%= link_to t('defaults.show'), schedule_path(schedule), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to t('defaults.destroy'), schedule_path(schedule), method: :delete, data: {confirm: t('defaults.destroy_confirm', name: schedule.schedule_name)}, class: 'btn btn-sm btn-outline-danger' %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @schedules %>
    <% else %>
      <div class = 'text-center item_less_margin'>
        <h3><%= t '.schedule_less' %></h3>
        <p class = 'lead'><%= t '.schedule_less2' %></p>
      </div>
    <% end %>
  <div>
</div>
